<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NodeJS</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
  </head>

  <body>
    <h1>hello world from ejs.</h1>

    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="/uploadFile">UpLoad File</a>
    </div>

    <div style="padding-left: 16px">
      <h2>List User</h2>
      <!-- <%= dataUser %> -->
    </div>

    <table class="w3-table-all">
      <thead>
        <tr class="w3-light-grey w3-hover-red">
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <tr class="w3-hover-green">
          <!-- <tr class="w3-hover-green"> -->
          <td>Jill</td>
          <td>Smith</td>
          <td>50</td>
          <td>50</td>
        </tr>
        <!-- <tr class="w3-hover-blue"> -->
        <% for(var i=0; i < dataUser.length; i++) { %>
        <tr class="w3-hover-green">
          <td><%= dataUser[i].id %></td>
          <td><%= dataUser[i].firstName %></td>
          <td><%= dataUser[i].lastName %></td>
          <td>
            <a href="/detail/user/ <%= dataUser[i].id %>"
              target="_blank"
              type="button"
            >
              Detail
            </a>
            <form action="/editUser/<%= dataUser[i].id %>" method="get">
              <button name="userID" type="submit">Edit</button>
            </form>
            <form action="/deleteUser" method="post">
              <input
                name="userID"
                type="text"
                value="<%=dataUser[i].id %>"
                hidden
              />
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <div class="create-user-container">
      <form action="/create-new-user" method="post">
        <div>Create a new user</div>
        <div>
          <label for="">firstName</label>
          <input type="text" name="firstName" />
        </div>
        <div>
          <label for="">LastName</label>
          <input name="lastName" type="text" />
        </div>
        <div>
          <label for="">email</label>
          <input name="email" type="text" />
        </div>
        <div>
          <label for="">address</label>
          <input name="address" type="text" />
        </div>
        <div>
          <button type="submit">Send Form</button>
        </div>
      </form>
    </div>
  </body>
</html>
