  <body>
    <h1>hello world from ejs.</h1>

    <div class="topnav">
      <a href="/">Home</a>
      <a class="active" href="/uploadFile">UpLoad File</a>
    </div>

    <div class="upload_file">
      <form
        enctype="multipart/form-data"
        action="/upload-profile-pic"
        method="post"
      >
        <div>
          <label for=""></label>
          <input type="file" name="profile_pic" />
        </div>
        <div>
          <button type="submit">Save file</button>
        </div>
      </form>

      <form
        class="form2"
        method="POST"
        action="/upload-multiple-images"
        enctype="multipart/form-data"
      >
        <div>
          <label>Select multiple images:</label>
          <input type="file" name="multiple_images" multiple />
        </div>
        <div>
          <input
            type="submit"
            name="btn_upload_multiple_images"
            value="Upload"
          />
        </div>
      </form>
    </div>
